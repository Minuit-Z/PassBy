<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dip">

        <ImageView
            android:id="@+id/img_item_head_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="20dip">

            <TextView
                android:id="@+id/tv_item_head_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1123"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_item_head_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12313"
                android:textColor="#99000000"
                android:textSize="10dp" />

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_item_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:textSize="18dp"
        android:text="12312312313221313213"
        android:textColor="#DD000000" />

    <ImageView
        android:id="@+id/img_item_file"
        android:layout_width="400dip"
        android:layout_height="200dip"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#77000000" />

    <TextView
        android:id="@+id/tv_item_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="暂无评论" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_item_my_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:hint="评论"
            android:inputType="text"
            android:textSize="13dp" />

        <Button
            android:id="@+id/btn_item_send_comment"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#66000000" />
</LinearLayout>

